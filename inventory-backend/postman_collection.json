{
  "info": {
    "name": "Inventory Management APIs",
    "_postman_id": "12345678-1234-5678-1234-567812345678",
    "description": "Postman collection for testing the Inventory Management System API"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"Ujjwal\",\n  \"password\": \"12345\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/signup",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "signup"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"Ujjwal\",\n  \"password\": \"12345\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "login"
          ]
        }
      }
    },
    {
      "name": "Add Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer <your_token_here>"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"MacBook Pro\",\n  \"type\": \"Electronics\",\n  \"sku\": \"MAC-2025\",\n  \"image_url\": \"https://example.com/macbook.jpg\",\n  \"description\": \"Apple MacBook Pro 14-inch\",\n  \"quantity\": 10,\n  \"price\": 199999\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/products",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "products"
          ]
        }
      }
    },
    {
      "name": "Update Product Quantity",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer <your_token_here>"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"quantity\": 25\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/products/:id/quantity",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "products",
            ":id",
            "quantity"
          ]
        }
      }
    },
    {
      "name": "Get Products (Paginated)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer <your_token_here>"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/products?page=1",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "products"
          ],
          "query": [
            {
              "key": "page",
              "value": "1"
            }
          ]
        }
      }
    }
  ]
}